        <div class="site-header">
            <h1 class="site-title">GESTION DE PANIER</h1>
        </div>

        <!-- Liens de navigation -->
        <div class="nav-links">
            <a href="/produits" class="nav-link">
                <h2 class="link-title">Produits</h2>
                <p class="link-description">Gérez vos produits ici</p>
            </a>

            <a href="/cart" class="nav-link">
